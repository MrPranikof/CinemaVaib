/* ==========================
   🎬  CinemaVaib — DARK THEME
   Стиль: минимализм + конструктивизм
   Шрифты: Oswald, Montserrat, Roboto, Open Sans
   ========================== */

/* ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
   БАЗОВЫЕ НАСТРОЙКИ
   ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━ */

QWidget {
    background-color: #0F1115;
    color: #EAEAEA;
    font-family: 'Roboto', 'Open Sans', sans-serif;
    font-size: 15px;
}

/* ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
   ЗАГОЛОВКИ
   ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━ */

QLabel#TitleLabel {
    font-family: 'Oswald';
    font-size: 28px;
    font-weight: 600;
    color: #FFFFFF;
    letter-spacing: 1px;
}

QLabel#SectionLabel {
    font-family: 'Montserrat';
    font-weight: 600;
    font-size: 18px;
    color: #DDDDDD;
    border-bottom: 2px solid #00A8E8;
    padding-bottom: 4px;
    margin-top: 12px;
    margin-bottom: 8px;
}

QLabel#BrandLabel {
    font-family: 'Oswald', sans-serif;
    font-size: 32px;
    font-weight: 700;
    color: #00CFFF;
    letter-spacing: 1px;
    margin-bottom: 16px;
}

QLabel#ProfileTitle {
    color: #00b4ff;
    font-size: 22px;
    font-weight: bold;
    margin-bottom: 10px;
}

QLabel#ProfileInfo {
    color: #cccccc;
    margin-bottom: 15px;
    font-size: 15px;
}

QLabel#SuccessLabel {
    color: #55C78C;
    font-weight: 600;
}

QLabel#ErrorLabel {
    color: #E63946;
    font-weight: 600;
}

QLabel#FooterText {
    font-family: 'Open Sans';
    font-size: 13px;
    color: #7A7A7A;
}

QLabel#HeaderLogo {
    background: transparent;
}

QLabel {
    background-color: transparent;
}

/* Ссылки */
QLabel a {
    color: #00A8E8;
    text-decoration: none;
}

QLabel a:hover {
    color: #03B7F5;
}

/* ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
   ТЕКСТОВЫЕ ПОЛЯ
   ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━ */

QLineEdit {
    background-color: #25272B;
    border: 1px solid #35383D;
    border-radius: 6px;
    padding: 10px;
    color: #EAEAEA;
    selection-background-color: #00A8E8;
    selection-color: #FFFFFF;
}

QLineEdit:hover {
    border-color: #4A4D55;
}

QLineEdit:focus {
    border-color: #00A8E8;
}

QTextEdit {
    background-color: #25272B;
    border: 1px solid #35383D;
    border-radius: 6px;
    padding: 10px;
    color: #EAEAEA;
    selection-background-color: #00A8E8;
    selection-color: #FFFFFF;
}

QTextEdit:focus {
    border-color: #00A8E8;
}

/* ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
   КНОПКИ
   ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━ */

QPushButton {
    background-color: #00A8E8;
    color: #FFF;
    font-family: 'Montserrat';
    font-weight: 600;
    font-size: 16px;
    border-radius: 6px;
    padding: 10px;
    border: none;
}

QPushButton:hover {
    background-color: #03B7F5;
}

QPushButton:pressed {
    background-color: #0085C0;
}

QPushButton:disabled {
    background-color: #2A2A2A;
    color: #666666;
}

QPushButton#PassToggle {
    background: transparent;
    border: none;
    padding: 0;
    border-radius: 4px;
}

QPushButton#PassToggle:hover {
    background-color: rgba(255, 255, 255, 0.08);
}

QPushButton#HeaderButton {
    background: transparent;
    color: #EAEAEA;
    font-family: 'Montserrat';
    font-size: 14px;
    border: 1px solid transparent;
    padding: 4px 12px;
    border-radius: 4px;
}

QPushButton#HeaderButton:hover {
    border: 1px solid #00A8E8;
    color: #00CFFF;
}

QPushButton#ChangePasswordButton {
    background-color: #00aaff;
    color: #ffffff;
}

QPushButton#ChangePasswordButton:hover {
    background-color: #00c3ff;
}

QPushButton#LogoutButton {
    background-color: #ff4444;
    color: #ffffff;
}

QPushButton#LogoutButton:hover {
    background-color: #ff5555;
}

QPushButton#BackButton {
    background-color: #444c56;
    color: #ffffff;
}

QPushButton#BackButton:hover {
    background-color: #58606a;
}

/* ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
   CHECKBOX
   ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━ */

QCheckBox {
    color: #EAEAEA;
    font-family: 'Open Sans';
    font-size: 14px;
    background-color: transparent;
    spacing: 5px;
}

QCheckBox::indicator {
    width: 16px;
    height: 16px;
    border: 1px solid #00A8E8;
    border-radius: 2px;
    background: #1E1E1E;
}

QCheckBox::indicator:hover {
    background: #252525;
    border-color: #03B7F5;
}

QCheckBox::indicator:checked {
    background-color: #00A8E8;
}

QCheckBox::indicator:checked:hover {
    background-color: #03B7F5;
}

/* ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
   SPINBOX
   ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━ */

QDoubleSpinBox,
QSpinBox {
    background-color: #25272B;
    border: 1px solid #35383D;
    border-radius: 6px;
    padding: 8px;
    color: #EAEAEA;
}

QDoubleSpinBox:hover,
QSpinBox:hover {
    border-color: #4A4D55;
}

QDoubleSpinBox:focus,
QSpinBox:focus {
    border-color: #00A8E8;
}

/* ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
   COMBOBOX
   ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━ */

QComboBox {
    background-color: #25272B;
    border: 1px solid #35383D;
    border-radius: 6px;
    padding: 8px 10px;
    color: #EAEAEA;
    min-width: 120px;
}

QComboBox:hover {
    border-color: #00A8E8;
}

QComboBox:focus {
    border-color: #00A8E8;
}

QComboBox::drop-down {
    border: none;
    width: 20px;
}

QComboBox::down-arrow {
    image: none;
    border-left: 5px solid transparent;
    border-right: 5px solid transparent;
    border-top: 5px solid #EAEAEA;
    margin-right: 5px;
}

QComboBox::down-arrow:hover {
    border-top-color: #00A8E8;
}

QComboBox QAbstractItemView {
    background-color: #25272B;
    border: 1px solid #00A8E8;
    selection-background-color: #00A8E8;
    selection-color: #FFFFFF;
    color: #EAEAEA;
    outline: none;
}

QComboBox QAbstractItemView::item {
    padding: 5px;
    min-height: 25px;
}

QComboBox QAbstractItemView::item:hover {
    background-color: rgba(0, 168, 232, 0.3);
}

/* ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
   СПИСКИ
   ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━ */

QListWidget {
    background-color: #1C1E22;
    border: 1px solid #35383D;
    border-radius: 6px;
    padding: 5px;
    color: #EAEAEA;
}

QListWidget::item {
    padding: 8px 12px;
    border-radius: 4px;
    margin: 2px 0;
}

QListWidget::item:hover {
    background-color: rgba(0, 168, 232, 0.2);
}

QListWidget::item:selected {
    background: qlineargradient(x1:0, y1:0, x2:1, y2:0,
        stop:0 #00A8E8, stop:1 #0088C0);
    color: #FFFFFF;
    font-weight: 600;
}

/* ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
   ТАБЛИЦЫ
   ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━ */

QTableView,
QTableWidget {
    background-color: #1E1E1E;
    alternate-background-color: #222222;
    border: 1px solid #2F2F2F;
    gridline-color: #2F2F2F;
    border-radius: 3px;
    selection-background-color: #00A8E8;
    selection-color: #FFFFFF;
    font-family: 'Open Sans';
    color: #EAEAEA;
}

QTableView::item,
QTableWidget::item {
    padding: 5px;
    border: none;
}

QTableView::item:hover,
QTableWidget::item:hover {
    background-color: #2A2A2A;
}

QTableView::item:selected,
QTableWidget::item:selected {
    background-color: #00A8E8;
    color: #FFFFFF;
}

QTableView QLineEdit,
QTableWidget QLineEdit {
    background-color: #25272B;
    border: 1px solid #00A8E8;
    border-radius: 3px;
    padding: 3px;
    color: #EAEAEA;
}

QTableWidget QComboBox {
    background-color: #25272B;
    border: 1px solid #35383D;
    border-radius: 4px;
    padding: 5px;
    color: #EAEAEA;
}

QTableWidget QComboBox:hover {
    border-color: #00A8E8;
}

QTableWidget QLineEdit:focus {
    border-color: #00A8E8;
}

QHeaderView::section {
    background-color: #2A2A2A;
    font-family: 'Montserrat';
    font-weight: 600;
    font-size: 14px;
    color: #EAEAEA;
    border: none;
    border-bottom: 1px solid #333;
    border-right: 1px solid #333;
    padding: 6px;
}

QHeaderView::section:hover {
    background-color: #333333;
}

QTableCornerButton::section {
    background-color: #2A2A2A;
    border: none;
    border-bottom: 1px solid #333;
    border-right: 1px solid #333;
}

/* ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
   SCROLLBAR
   ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━ */

QScrollBar:vertical {
    background: #1C1C1C;
    width: 8px;
    margin: 2px;
    border-radius: 4px;
}

QScrollBar::handle:vertical {
    background: #434343;
    border-radius: 4px;
    min-height: 20px;
}

QScrollBar::handle:vertical:hover {
    background: #00A8E8;
}

QScrollBar::add-line:vertical,
QScrollBar::sub-line:vertical {
    height: 0;
}

QScrollBar:horizontal {
    background: #1C1C1C;
    height: 8px;
    margin: 2px;
    border-radius: 4px;
}

QScrollBar::handle:horizontal {
    background: #434343;
    border-radius: 4px;
    min-width: 20px;
}

QScrollBar::handle:horizontal:hover {
    background: #00A8E8;
}

QScrollBar::add-line:horizontal,
QScrollBar::sub-line:horizontal {
    width: 0;
}

/* ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
   ВКЛАДКИ
   ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━ */

QTabWidget::pane {
    border: 1px solid #2A2C32;
    border-radius: 6px;
    background-color: #1C1E22;
    padding: 10px;
}

QTabWidget::tab-bar {
    alignment: left;
}

QTabBar::tab {
    background-color: #25272B;
    color: #EAEAEA;
    border: 1px solid #35383D;
    border-bottom: none;
    border-top-left-radius: 6px;
    border-top-right-radius: 6px;
    padding: 10px 20px;
    margin-right: 2px;
    font-weight: 600;
}

QTabBar::tab:selected {
    background-color: #1C1E22;
    color: #00A8E8;
    border-color: #00A8E8;
}

QTabBar::tab:hover:!selected {
    background-color: #2A2C32;
    color: #03B7F5;
}

/* ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
   КАРТОЧКИ И КОНТЕЙНЕРЫ
   ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━ */

QFrame#FormContainer {
    background-color: #1C1E22;
    border-radius: 12px;
    padding: 40px 32px 24px 32px;
}

QGroupBox#ProfileCard {
    background-color: #1b1e24;
    border: 1px solid #20242c;
    border-radius: 12px;
    padding: 30px;
    min-width: 400px;
}

QWidget#HeaderBar {
    background-color: #16181C;
    border-bottom: 1px solid #00A8E8;
}

QWidget#FooterBar {
    background-color: #16181C;
    border-top: 1px solid #00A8E8;
}

QWidget#ContentArea {
    background-color: #0F1115;
}

QFrame#line {
    background-color: #00A8E8;
    max-height: 2px;
}

/* ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
   ДИАЛОГИ
   ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━ */

QDialog {
    background-color: #0F1115;
    border: 2px solid #00A8E8;
    border-radius: 8px;
}

QDialogButtonBox QPushButton {
    min-width: 80px;
    padding: 8px 16px;
}

/* Превью изображения в диалогах */
QLabel#PhotoPreview {
    border: 2px solid #35383D;
    border-radius: 8px;
    background-color: #1C1E22;
}